<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block navbar %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        {% if app.user %}
                            <li class="nav-item">
                                <a href="/" class="nav-link">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" id="navQuestionsDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Questions</a>
                                <div class="dropdown-menu" aria-labelledby="navQuestionsDropdownMenuLink">
                                    <a href="{{path('questions_list')}}" class="dropdown-item">List</a>
                                    <a href="{{path('questions_create')}}" class="dropdown-item">Create</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" id="navSurveyTemplatesMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Survey Templates</a>
                                <div class="dropdown-menu" aria-labelledby="navSurveyTemplatesMenuLink">
                                    <a href="{{path('survey_templates_list')}}" class="dropdown-item">List</a>
                                    <a href="{{path('survey_templates_create')}}" class="dropdown-item">Create</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" id="navSurveyTemplatesMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Surveys</a>
                                <div class="dropdown-menu" aria-labelledby="navSurveyTemplatesMenuLink">
                                    <a href="{{path('surveys_list')}}" class="dropdown-item">List</a>
                                    <a href="{{path('surveys_add')}}" class="dropdown-item">Create</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" id="navUserMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">User</a>
                                <div class="dropdown-menu" aria-labelledby="navUserMenuLink">
                                    <a href="{{path('account')}}" class="dropdown-item">Account</a>
                                    <div class="dropdown-divider"></div>
                                    <a href="{{path('app_logout')}}" class="dropdown-item">Logout</a>
                                </div>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a href="{{path('app_login')}}" class="nav-link">Login</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        {% endblock %}
        {% block body %}{% endblock %}
        <!-- Latest compiled and minified JavaScript -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
